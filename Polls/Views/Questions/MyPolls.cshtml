@model IEnumerable<Polls.Models.Question>

@{
    ViewBag.Title = "MyPolls";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Questions</title>
</head>
<body>
    <h2>My Polls</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if (item.User.Name == User.Identity.Name)
            { 
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>

                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.QuestionID })
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = item.QuestionID })
                </td>
                <td>
                    @Html.ActionLink("View statistics", "Statistics", new {question = item.Text, id = item.QuestionID})
                </td>
            </tr>
            }
        }

    </table>
    <p>
        @ViewBag.ErrorMessage
    </p>
</body>
</html>
