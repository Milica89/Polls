@model IEnumerable<Polls.Models.Answer>

@{
    ViewBag.Title = "ChangeAnswers";
}

<h2>ChangeAnswers</h2>


<table>
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
 
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.ActionLink("Delete", "DeleteAnswer", new { id=item.AnswerID })
        </td>
    </tr>
}

</table>
<p>
    @Html.ActionLink("Add more answers", "AddAnswer")
</p>
